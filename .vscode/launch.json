{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Unit Tests",
            "type": "python",
            "request": "launch",
            "program": "/usr/local/lib/python3.8/site-packages/pytest/__main__.py",
            "args": [
              "${workspaceFolder}/test/unit_tests.py"
            ],
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "debugOptions": [
              "WaitOnAbnormalExit",
              "WaitOnNormalExit",
              "RedirectOutput"
            ]
          },
          {
            "name": "Functionality Tests",
            "type": "python",
            "request": "launch",
            "program": "/usr/local/lib/python3.8/site-packages/pytest/__main__.py",
            "args": [
              "${workspaceFolder}/test/functionality_tests.py"
            ],
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "debugOptions": [
              "WaitOnAbnormalExit",
              "WaitOnNormalExit",
              "RedirectOutput"
            ]
          }
    ]
}